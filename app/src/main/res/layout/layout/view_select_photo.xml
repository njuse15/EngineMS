<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="24dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorBlack"/>

    <Button
        android:id="@+id/select_photo_tv_open_album"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="0.2dp"
        android:gravity="center"
        android:background="@drawable/ripple_photo_button"
        android:text="@string/open_album" />

    <Button
        android:id="@+id/select_photo_tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@drawable/ripple_photo_button"
        android:text="@string/take_photo" />

    <Button
        android:id="@+id/select_photo_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/ripple_photo_button"
        android:text="取消"/>

</LinearLayout>

